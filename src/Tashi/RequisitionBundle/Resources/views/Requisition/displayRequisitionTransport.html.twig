<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" >           
    <tr>
        <td class="td-label-title">Purpose List:</td>
    </tr>
    <tr>
        <td>
            <table width="100%" align="center" border="0" cellpadding="0" id="example" cellspacing="0"  class="display"  >  
                <thead>
                    <tr> 
                        <th class="tbl-th-grid-view-row-no-bg">Purpose Name</th>
                        <th class="tbl-th-grid-view-row-no-bg">Description</th>
                        <th class="tbl-th-grid-view-row-no-bg">Action</th>                                               
                    </tr>
                </thead>
                <tbody>
                             {% for jt in allRecord.result%}
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{jt.purposeName | default('')}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{jt.description | default('')}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">
                                <a href="javascript:void();" onclick="retrieveRequisitionTransport('{{ path('_retrieve_transport',{ 'transportorId': jt.pkid | default('')})}}');">Edit</a> |
                                <a href="javascript:void();" onclick="deleteTransportModule('{{ path('_delete_transportor',{ 'transportorId': jt.pkid | default('')})}}','Purpose');">Delete</a>
                            </td>                                               
                        </tr>
                                  {%endfor%}
                    </tbody>
                </table>
            </td>
        </tr>                                 
    </table>