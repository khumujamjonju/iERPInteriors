<input id="rid" type="hidden" value="{{req.pkid}}">
<table width="100%" style="border: 1px dashed #000;margin-top:-20px;" >
    <td class="td-label-title" colspan="6" style="text-align: center;">-------------------------------Requisition Details For {{req.employeeFk.personFk.personName}}------------------------------</td>
    <tr class="td-label-title">
        <td  style="padding:10px;background:#fff;">
            <span style="text-decoration: underline;">REQUISITION DATE: </span><br/><br/>{{req.requisitionDate |date('y-m-d')}}
 </td><br/>

    <td  style="padding:10px;background:#fff;">
    <span style="text-decoration: underline;">DESCRIPTION:</span><br/><br/>{{req.requisitionDetails}}
    </td>

    <td  style="padding:10px;background:#fff;">
        <span style="text-decoration: underline;"></span><br/><br/>
</td>
    <td colspan="4"  style="padding:10px;background:#fff;">
        <span style="text-decoration: underline;"> </span><br/><br/>
 </td>
</tr>
<br/>

<TD class="td-label-title" colspan="5" style=" padding-left: 10px;padding-right: 10px;">
<tr>
    <td style="padding:10px;text-decoration: underline;">PRODUCT NAME:</td>
    <td style="padding:10px;text-decoration: underline;">QUANTITY:</td>
    <td style="padding:10px;text-decoration: underline;">UNIT:</td>
    <td style="padding:10px;text-decoration: underline;"> </td>
    <td style="padding:10px;text-decoration: underline;"> </td>
</tr>
</TD>
 

{%for r in prod%}
<tr style="padding:10px;background:#fff;">
    <td  style="padding:10px;">{{r.productFk.productName}} ({{r.productFk.productCode}})</td>
    <td  style="padding:10px;">{{r.quantity}}</td>
    <td  style="padding:10px;">{{r.unitFk.unitName}}</td>
    <td  style="padding:10px;"> </td>
    <td  style="padding:10px;"> </td>
</tr>
{%endfor%} 

<tr>
    <td style="padding:10px;">
        Remark:
    </td>
    <td  style="padding:10px;" colspan="5">
        <textarea style="width:99%;" name="description" Placeholder="Please Enter Remarks........"></textarea>
    </td>
</tr>   
<tr>
    <td colspan="5" style="text-align: center;">
        <input class="button blue" id="approveid" type="button" value="Approve" onclick="ApproveRequisitionDetails('{{path('_apprv_requisitiondetails')}}');"/>  
        <input class="button blue" id="cancelpo" type="button" value="Cancel Requisition" onclick="return CancelRequisitionDetails('{{path('_cancelreqdetails')}}', this);"/>   
    </td>
</tr>   

</table>