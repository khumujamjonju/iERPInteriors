
<table id="trSavePO"  width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border"  id="purtable" style="margin-top: 5px;"> 
     
     <tr>
        <input id="spanCloseOpenHandlerSHowdetails" value="0" type="hidden">
        <td class="td-label-title" colspan="4" onclick="lmsShowHideAddressResult('SHowdetails');">
            <label id="generatedpo">Purchase Order Entry Details </label>
            <span style="float: right;" id="spanIdSHowdetails" class="span_open" >&nbsp;</span>
        </td>
       
        </tr>
 <tr id="trAddressSHowdetails">
            <td>                    
                <table width="100%" cellpadding="0" cellspacing="0" class="tbl-border">
                    <tr>
                        <td class="td-gray-bg">Enter P.O Date:</td>
                        <td class="td-white-bg">
                            <input type="date" class="cmnWidth" name="podate"  >
                        </td>
                        <td class="td-gray-bg">Expected Delivery Date:</td>
                        <td class="td-white-bg"><input type="date" class="cmnWidth" name="expdeliverdate"  ></td>
                    </tr>
                    <tr>
                        <td class="td-gray-bg">Select Transporter:</td>
                        <td class="td-white-bg">
                            <select class="cmnWidth" name="transport">
                                <option>--Select--</option>

                            {%for t in trnsport%}
                             <option value="{{t.pkid}}"> {{t.name}}    </option>
                             {%endfor%}
                            </select>
                        </td>
                        <td class="td-gray-bg">Mode Of Transport:</td>
                        <td class="td-white-bg">
                         <select class="cmnWidth" name="transmode">
                            <option>--Select--</option>
                           {%for m in tmode%}
                             <option value="{{m.pkid}}"> {{m.modeName}}    </option>
                             {%endfor%}  
                         </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="td-gray-bg">Transport Cost:</td>
                        <td class="td-white-bg">
                           <input class="cmnWidth" type="text" name="trcost"/>
                        </td>
                        <td class="td-gray-bg">Select PO Status:</td>
                        <td class="td-white-bg">
                         <select class="cmnWidth" name="postatus">
                            <option>--Select--</option>
                             {%for s in status%}
                             <option value="{{s.pkid}}"> {{s.statusMsg}}    </option>
                             {%endfor%}  
                         </select>
                        </td>
                    </tr>
                    
                    <tr>
                        <td class="td-gray-bg">Purchase Completed:</td>
                        <td class="td-white-bg">
                            <select class="cmnWidth">
                                <option value="0">--Select--</option>
                                <option value="">Yes</option>
                                <option value="">No</option>
                            </select>
                        </td>
                        <td class="td-gray-bg">Purchase By:</td>
                        <td class="td-white-bg">
                         <select class="cmnWidth" name="purby">
                            <option>--Select--</option>
                              {%for e in emp.result%}
                             <option value="{{e.employeePk}}"> {{e.personFk.personName}}    </option>
                             {%endfor%} 
                         </select>
                        </td>
                    </tr>
                    
                    
                    
                    <tr>
                        <td class="td-gray-bg">Mode Of Payment:</td>
                        <td class="td-white-bg">
                            <select class="cmnWidth" name="selpayMode" id="selpayMode" onchange="ModeChange(this);"  >
                            <option>--Select--</option>
                              {%for p in pay%}
                             <option value="{{p.pkid}}&{{p.ispaymentNoRequired}}"> {{p.paymentModeName}}    </option>
                             {%endfor%} 
                         </select>
                        </td>
                        <td class="td-gray-bg"></td>
                        <td class="td-white-bg"></td>
                    </tr>
                     <tr>
                        <td class="td-gray-bg">Cheque/Transaction/DD No.:</td>
                        <td class="td-white-bg">
                            <input class="cmnWidth" type="text" name="paymentno" id="paymentno"  disabled="disable" value=" ">
                        </td>
                        <td class="td-gray-bg">Bank Name:</td>
                        <td class="td-white-bg">  <input class="cmnWidth" type="text" name="bankname"  id="bankname" disabled="disable" value="">     </td>
                    </tr>
                    
                    <tr>
                        <td class="td-gray-bg">Payment Date:</td>
                        <td class="td-white-bg">
                          <input class="cmnWidth" type="date" name="paydate" id="amount">
                        </td>
                        <td class="td-gray-bg">Amount:</td>
                        <td class="td-white-bg"><input class="cmnWidth" type="text" name="amount" id="amount"></td>
                    </tr>
                    
                    
                    
                    <tr>
                        <td class="td-gray-bg">Enter P.O Description:</td>
                        <td class="td-white-bg" colspan="3">
                            <textarea style="width:99%;" name="description"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="td-white-bg" colspan="3" style="text-align: center;">
                        <input type="button" class="button blue" id="btn_save" value="Save" onclick="return SavePODetails('{{path('_add_podetails')}}',this);"></td>
                    </tr>

                </table>

            </td>
        </tr>
 
 </table>
