<script type="text/javascript" src="{{ asset('bundles/Tashi/js/Navigation/script.js') }}"></script>
<div class='sub-menu'>
    <ul>
        <li class='active'><a href="javascript:void();" onclick="fnLeftMenuNavigation('{{path('_add_store')}}', 'add_store', 'Store Master', 'Add store');">Add store</a></li> 
        <li id="store_building"><a href="javascript:void();" onclick="fnSubMenuNavigation('{{path('_store_building')}}', 'store_building', 'Store Management', 'Building Master', 'Store Building Master');">Building Details</a></li> 
        <li id="floor_no"><a href="javascript:void();" onclick="fnSubMenuNavigation('{{path('_building_floor')}}', 'floor_no', 'Store Management', 'Assign Floor No', 'Floor No');">Floor No</a></li> 
