<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border">           
    <tr>
        <input id="spanCloseOpenHandlertdemailtemplate" value="0" type="hidden">
        <td class="td-label-title" onclick="lmsShowHideAddressResult('tdemailtemplate');">SEND EMAIL <span style="float: right;" id="spanIdtdemailtemplate" class="span_open" >&nbsp;</span></td>
    </tr>
    <tr id="trAddresstdemailtemplate">
        <td>
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="td-gray-bg" width="20%">To</td>
                    <td class="td-white-bg" width="80%" style="text-align: justify;">
                        {%for email in emails%}
                            <a href="javascript:void(0);" style="color:#0066ff;">{{email}}</a><strong>;</strong>
                            <input type="hidden" name="inputEmails" value="{{email}}">                            
                        {%endfor%}
                        {%for custid in custids%}
                            <input type="hidden" name="inputSmscustid" value="{{custid}}">
                        {%endfor%}
                        {%for cont in contactids%}
                            <input type="hidden" name="inputSmscontid" value="{{cont}}">
                        {%endfor%}
                    </td>    
                </tr>
                <tr>
                    <td class="td-gray-bg" width="20%">Subject</td>
                    <td class="td-white-bg" width="80%">
                        <input type="text" id="txtSubject" name="txtSubject" style="width:509px;"></input>
                    </td>    
                </tr>
                <tr>
                    <td class="td-gray-bg" width="20%">Message</td>
                    <td class="td-white-bg" width="80%">      
                        <div id="sample">
                            <textarea name="txtareaEmail" id="txtareaEmail" cols="80" rows="10">                            
                            </textarea>  
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="td-gray-bg" width="20%">Attachment(if any)</td>
                    <td class="td-white-bg" width="80%" valign="top">      
                        <table id="tbAttachment" border="0" cellpadding="0" cellspacing="0" style="float:left;">  
                            <tbody>
                                <tr></tr>
                            </tbody>
                        </table>
                        <input id="btnAddAttach" type="button" class="button" value="Add Attachment" style="margin-left:20px;" onclick="AddAttachmentRow();">                       
                    </td>
                </tr>
                <tr>                    
                    <td class="td-white-bg" colspan="2" align="center" style="padding:10px 0;">
                        <input type="button" class="button" value="Send Email" onclick="SendEmail('{{path("_sendemail")}}');">
                    </td>    
                </tr>
            </table>
        </td>
    </tr>
</table>
