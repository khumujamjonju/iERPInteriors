<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" >           
    <tr>
        <input id="spanCloseOpenHandlertdsmstemplate" value="0" type="hidden">
        <td class="td-label-title" onclick="lmsShowHideAddressResult('tdsmstemplate');">SEND SMS <span style="float: right;" id="spanIdtdsmstemplate" class="span_open" >&nbsp;</span></td>
    </tr>
    <tr id="trAddresstdsmstemplate" >
        <td>
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="td-gray-bg" width="20%">To</td>
                    <td class="td-white-bg" width="80%" style="text-align: justify;">
                        {%for mob in mobilenos%}
                            <strong>{{mob ~ ";"}}</strong>
                            <input type="hidden" name="inputMobNos" value="{{mob}}">                            
                        {%endfor%}
                        {%for sid in supid%}
                            <input type="hidden" name="inputSmscustid" value="{{sid}}">
                        {%endfor%}
                        {%for cont in contactids%}
                            <input type="hidden" name="inputSmscontid" value="{{cont}}">
                        {%endfor%}
                    </td>    
                </tr>
                <tr>
                    <td class="td-gray-bg" width="20%">Subject</td>
                    <td class="td-white-bg" width="80%">
                        <input type="text" id="txtSubject" name="txtSubject" style="width:509px;"></input>
                    </td>    
                </tr>
                <tr>
                    <td class="td-gray-bg" width="20%">Message</td>
                    <td class="td-white-bg" width="80%"><textarea id="txtSmsMessage" name="txtSmsMessage" cols="80" rows="0" style="height:100px;"></textarea>
                    </td>    
                </tr>
                <tr>                    
                    <td class="td-white-bg" colspan="2" align="center" style="padding:10px 0;">
                        <input type="button" class="button" value="Send Message" onclick="SendCOMSMS('{{path("_sendsuppliersms")}}');">
                    </td>    
                </tr>
            </table>
        </td>
    </tr>
</table>
