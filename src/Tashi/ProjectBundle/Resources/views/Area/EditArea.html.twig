{%set areaName=area.area%}
{%set desc=area.description%}
{%set areapk=area.pkid%}

<form id="frmEditCategory" style="margin: 0px;">
    <table width="100%" align="center" border="0" cellpadding="0" cellspacing="0">  
        <tr>
            <td class="td-gray-bg">Area Name<span class="mandatoryField">*</span></td>
            <td class="td-white-bg"colspan="1">
                <input class="cmnWidth" type="text" value="{{areaName}}" id="txtAreaName" name="txtAreaName" onkeypress="return NullonEnterKey(event);">                                     
            </td>
        </tr>
        <tr>
            <td class="td-gray-bg">Description<span class="mandatoryField">*</span></td>
            <td class="td-white-bg"colspan="1">
                {#<input class="cmnWidth" type="text" value="{{catDesc}}" id="txt_Description" name="txt_Description"> #}
                <textarea id="txtDescription" name="txtDescription" rows="5" cols="50">{{desc}}</textarea>
                 <input type="hidden" value="{{areapk}}" name="pkid">   
            </td> 
        </tr>
        <tr>
            <td class="td-gray-bg"></td>
            <td class="td-white-bg" colspan="5">
                <input type="button" class="button blue" id="btn_upd" value="Update" onclick="ManageArea('{{path('_manageprojectarea',{'mode':'EDT'})}}', 'frmEditCategory','upd');"/>
                {#<input type="button" class="button blue" id="btn_clear" value="Reset" onclick="formReset();"/> #}
                <input type="button" class="button blue" id="btn_cancel" value="Cancel" onclick="CancelAreaUpdate('{{path("_gotoaddarea")}}');"/>
            </td>  
        </tr>
    </table>
</form> 