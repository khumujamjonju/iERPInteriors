<table id="example" width="100%" align="center" border="0" cellpadding="0" cellspacing="0"  class="display"  >  
    <thead>
        <tr> 
            {#<th class="td-gray-bg">CATEGORY_ID</th>#}
            <th class="tbl-th-grid-view-row-no-bg tbl-th-bg" width="200px">AREA NAME</th>
            <th class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:left;">DESCRIPTION</th>
            <th class="tbl-th-grid-view-row-no-bg tbl-th-bg" width="200px">ACTION</th>                                              
        </tr>
    </thead>
    <tbody> 
        {%if areaArr|length <=0%}
            <tr>
                <td colspan="3">
                    <p style="color:#ff0000; margin:0; text-align:center; padding:5px 0;">
                        No Project Area has been added yet
                    </p>

                </td>
            </tr>
            <tr>
                <td colspan="4"></td>
            </tr>
        {%else%}
            {%for area in areaArr %}
                <tr>
                   {# <td class="tbl-grid-view-row-no-bg" align="center">{{cat.CategoryID|default("")}}</td>#}
                   <td class="tbl-grid-view-row-no-bg" align="center">{{area.area|default("")|upper}}</td>
                    <td class="tbl-grid-view-row-no-bg" align="left">{{area.description|default("")}}</td>
                    <td class="tbl-grid-view-row-no-bg" align="center">
                        <a href="javascript:;" onclick="ProjectAreaAction('{{path('_gotoeditarea',{'areaid': area.pkid|default('')})}}','');">Edit</a> | 
                        <a href="javascript:;" style="color:#ff0000;" onclick="ProjectAreaAction('{{path('_deletearea',{'areaid': area.pkid})}}','del');">Delete</a>
                    </td>                                                
                </tr> 
           {%endfor%}
        {%endif%}
   </tbody>
</table>