<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" style="margin-top: 5px;">
    <tr>        
        <td class="td-label-title" >Advance Payment Detail:</td>            
    </tr>
    <tr>
        <td>
            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Date of Payment</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Payment Mode</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Cheque/Transaction/DD No.</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Bank Name</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Amount</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    {%if paymode is defined%}
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{paydate|date('d-M-Y')}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{paymode|upper}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{payno|upper}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{bank|upper}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{amount|number_format('2','.')}}</td>   
                            <td class="tbl-grid-view-row-no-bg" align="left">{{remark}}</td>
                        </tr>
                    {%else%}
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" colspan="6" align="center">
                                <strong style="color:#ff0000;">Advance Payment not received</strong>
                            </td>
                        </tr>
                    {%endif%}
                </tbody>
            </table>
        </td>
    </tr>
</table>
