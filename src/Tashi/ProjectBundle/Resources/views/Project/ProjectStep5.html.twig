<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" style="margin-top: 5px;">
    <tr>
        <input id="spanCloseOpenHandlerprojrevprdList" value="0" type="hidden">
        <td class="td-label-title" onclick="lmsShowHideAddressResult('projrevprdList');" style="cursor:pointer;">
            Selected Items(s):
            <span style="float: right;" onclick="lmsShowHideAddressResult('projrevprdList');" id="spanIdprojrevprdList" class="span_open" >&nbsp;</span>
        </td>        
    </tr>
    <tr id="trAddressprojrevprdList">
        <td>
            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" width="50px">#</td>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:left;">Product</td>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:right; width:100px;">Unit Price</td>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="width:100px;">Quantity</td>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:right; width:100px;">Total Price</td>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:right; width:100px;">Charge</td>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:right; width:100px;">Sub Total</td>
                    </tr>
                </thead>
                <tbody>
                    {%set slno=1%}
                    {%for i in range(0,itemArr['item']|length-1)%}                        
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" width="50px" align="center">{{slno}}</td>
                            <td class="tbl-grid-view-row-no-bg" style="text-align:justify;">
                                {%set item=itemArr['item'][i]%}
                                {%if item.pictureFk is null%}
                                    <img src="{{asset("bundles/common/images/noimage.png")}}" alt="image" class="prodlist"/>
                                {%else%}
                                    <a href="{{asset(item.pictureFk.path)}}" target="_blank"><img src="{{asset(item.pictureFk.path)}}" alt="image" class="prodlist"/></a>
                                {%endif%}
                                {{item.productCode|default('')}} - {{item.productName|default('')}}<br/>
                                <span style="color:#565656; font-size:">{{item.productDesc}}</span>
                            </td>
                            <td class="tbl-grid-view-row-no-bg" style="text-align:right; width:100px;">{{itemArr['price'][i]|default(0)|number_format(2,'.')}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center" style="width:100px;">{{itemArr['qty'][i]}}</td>
                            {%set totPrice=itemArr['price'][i]*itemArr['qty'][i]%}
                            <td class="tbl-grid-view-row-no-bg" style="text-align:right; width:100px;">{{totPrice|default(0)|number_format(2,'.')}}</td>
                            <td class="tbl-grid-view-row-no-bg" style="text-align:right; width:100px;">{{itemArr['charge'][i]|default(0)|number_format(2,'.')}}</td>
                            {%set subtotal=totPrice+itemArr['charge'][i]%}
                            <td class="tbl-grid-view-row-no-bg" style="text-align:right; width:100px;">{{subtotal|default(0)|number_format(2,'.')}}</td>
                        </tr>
                        {%set slno=slno+1%}
                    {%endfor%}
                    <tr>
                        <td class="tbl-th-grid-view-row-no-bg tbl-th-bg" colspan="6" style="text-align:right">Total Budget</td>
                        <td class="tbl-th-bg" style="text-align:right; width:100px; font-weight: bold; padding:5px; border-right:1px dotted transparent;">{{totbudget|number_format(2,'.')}}</td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
