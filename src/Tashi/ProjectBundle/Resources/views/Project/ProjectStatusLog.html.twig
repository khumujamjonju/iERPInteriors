<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border">
    <tr>
        <input id="spanCloseOpenHandlerStatusList" value="0" type="hidden">
        <td class="td-label-title" style="cursor:pointer;" onclick="lmsShowHideAddressResult('StatusList');">Project Status Log
        <span style="float: right;" id="spanIdStatusList" class="span_open" >&nbsp;</span></td> 
    </tr>
    <tr id="trAddressStatusList">
        <td>
            <input type="hidden" name="inputprojId" value="{{project.pkid}}"/>
             <table id="example"  width="100%" border="0" cellpadding="0" cellspacing="0" class="display">
                <thead>
                    <tr>                        
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">#</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Status</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg">Date</th>
                        <th class="tbl-th-grid-view-row-no-bg tbl-th-bg" style="text-align:left; width:50%;">Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    {%set slno=1%}
                    {%for status in statusArr%}
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{slno}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center" style="color:{{status.statusFk.statusColor}};">{{status.statusFk.statusName}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{status.statusDate|date('d-M-Y')}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center" style="text-align:justify;">{{status.Remarks}}                               
                            </td>                                
                        </tr>
                        {%set slno=slno+1%}
                    {%endfor%}                   
                </tbody>
             </table>
        </td>
    </tr>
</table>
{%if project.status.isPermanent==0%}
    <br/>
    <input type="button" class="button" value="Update Status" style="float:right;" onclick="GotoUpdateProjStatus('{{path("_projectstatus",{projid:project.pkid})}}');">
    <div class="clear"></div>
    <br/>
    <div id="divProjectStatus">
    </div>
{%endif%}