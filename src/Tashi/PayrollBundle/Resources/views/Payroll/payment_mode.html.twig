<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border">                       
    <tr>
        <td class="td-label-title">Create Payment Mode</td>
    </tr>
    <tr>
        <td>                 
            <form id="frmPaymentMode" style="margin: 0px;">
                <table width="100%" align="center" border="0" cellpadding="0" cellspacing="0">  
                    <tr>
                        <td class="td-gray-bg">Mode</td>
                        <td class="td-white-bg">
                            <input class="cmnWidth" type="text" id="payment_mode_name" name="txt_payment_mode"/>                                     
                        </td>
                    </tr>                     
                    <tr>
                        <td class="td-gray-bg">Description</td>
                        <td class="td-white-bg">
                            <textarea id="description" name="txt_description" cols="50" rows="4"></textarea>                                     
                        </td>                                                                                        
                    </tr>
                    <tr>
                        <td class="td-separator" colspan="4" style="text-align: center;">
                            <input type="button" class="button blue" id="btn_save" value="Save" onclick="return savePaymentMode(this, '{{ path('_save_payment_mode')}}');"/>
                            <input type="button" class="button blue" id="btn_edit" value="Edit" onclick="editPaymentModeField(this);" style="display: none;"/>
                            <input type="button" class="button blue" id="btn_update" value="Update" onclick="return savePaymentMode(this, '{{ path('_save_payment_mode')}}');"  style="display: none;"/>
                            <input type="button" class="button blue" id="btn_cancel" value="Cancel" onclick="cancelPamentModeField(this);" style="display: none;"/>
                            <input type="button" class="button blue" id="btn_clear" value="Reset" onclick="formReset();"/>  
                        </td>  
                    </tr>
                </table>
                     <input type="hidden" id="payment_mode_id"  name="txt_payment_mode_id" value=""/>
            </form>                               
        </td>
    </tr> 
</table>

<div id="display_list" style="margin-top: 8px;">
    <table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" >           
    <tr>
        <td class="td-label-title">Entry Detail List:</td>
    </tr>
    <tr>
        <td>                    
            <table width="100%" align="center" border="0" cellpadding="0" id="example" cellspacing="0"  class="display"  >  
                <thead>
                    <tr>
                        <th class="tbl-th-grid-view-row-no-bg">Sl.No.</th>    
                        <th class="tbl-th-grid-view-row-no-bg">Mode Name</th>                          
                        <th class="tbl-th-grid-view-row-no-bg">Description</th>
                        <th class="tbl-th-grid-view-row-no-bg">Action</th>                                              
                    </tr>
                </thead>

                <tbody>                           
                {%for r in paymentMode|default('')%} 
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{ loop.index }}</td>  
                            <td class="tbl-grid-view-row-no-bg" align="center">{{ r.paymentModeName|default('') }}</td>                             
                            <td class="tbl-grid-view-row-no-bg" style="width: 300px;">{{ r.description|default('') }}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">
                                <select class="normal_select" id="payrolMasterAction{{r.pkid|default('')}}" name="txt_payrolMasterAction" >
                                    <option value="">Select</option>                                
                                    <option value="{{path('_retrive_payment_mode',{'pkid': r.pkid|default('')})}}&upd">Edit</option>
                                    <option value="{{path('_delete_payment_mode',{'pkid': r.pkid|default('')})}}&del">Delete</option>
                                </select> 
                                <input class="button" name="commit" type="button" value="Go" onClick="payrolModeAction(this,'{{r.pkid|default('')}}','#payrolMasterAction');" />  
                            </td>                                                 
                        </tr>                    
                {%endfor%}

                        </tbody>
                    </table>
                </td>
            </tr>                                 
    </table>
 </div> 