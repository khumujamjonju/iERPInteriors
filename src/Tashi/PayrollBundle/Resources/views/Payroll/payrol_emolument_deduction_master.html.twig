<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border">                       
    <tr>
        <td class="td-label-title">Create Emolument Or Deduction</td>
    </tr>
    <tr>
        <td>                 
            <form id="frmEmolumentDeduction" style="margin: 0px;">
                <table id="emolumentDeductionTbl" width="100%" align="center" border="0" cellpadding="0" cellspacing="0">  
                    <tr>
                        <td class="td-gray-bg">Name(Emolument Or Deduction) <span class="necessary-field">*</span></td>
                        <td class="td-white-bg">
                            <input class="cmnWidth" type="text" id="emolument_or_deduction_name" name="txt_emolument_or_deduction_name" onkeypress="return NullonEnterKey(event);"/>                                     
                        </td>
                    </tr>   
                    <tr>
                        <td class="td-gray-bg">Select Type <span class="necessary-field">*</span></td>
                        <td class="td-white-bg">
                            <select class="select-width" id="field_type" name="txt_field_type">   
                                <option value="">--select--</option>
                                <option value="Emolument">Emolument</option>
                                <option value="Deduction">Deduction</option>
                            </select>                                     
                        </td>                                                                                        
                    </tr>
                    <tr>
                        <td class="td-gray-bg">Description</td>
                        <td class="td-white-bg">
                            <textarea id="description" name="txt_description" cols="50" rows="4"></textarea>                                     
                        </td>                                                                                        
                    </tr>
                    <tr>
                        <td class="td-separator" colspan="4" style="text-align: center;">
                            <input type="button" class="button blue" id="btn_save" value="Save" onclick="return saveEmolumentDeductionMaster(this, 'normalForm', '{{ path('_save_emolument_deduction_master')}}');"/>
                            <input type="button" class="button blue" id="btn_edit" value="Edit" onclick="editEmolumentDeductionMasterField(this);" style="display: none;"/>    
                            <input type="button" class="button blue" id="btn_update" value="Update" onclick="return saveEmolumentDeductionMaster(this, 'normalForm', '{{ path('_save_emolument_deduction_master')}}');" style="display: none;"/>
                            <input type="button" class="button blue" id="btn_cancel" value="Cancel" onclick="cancelEmolumentDeductionMasterField(this);" style="display: none;"/>
                            <input type="button" class="button blue" id="btn_clear" value="Reset" onclick="formReset();"/>  
                        </td>  
                    </tr>
                </table>
                     <input type="hidden" id="emolument_or_deduction_id"  name="txt_emolument_or_deduction_id" value=""/>
            </form>                               
        </td>
    </tr> 
</table>

<div id="display_list" style="margin-top: 8px;">
    <table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border">           
    <tr>
        <td class="td-label-title">Emolument Or Deduction Detail List:</td>
    </tr>
    <tr>
        <td>                    
            <table width="100%" align="center" border="0" cellpadding="0" id="example" cellspacing="0"  class="display"  >  
                <thead>
                    <tr>
                        <th class="tbl-th-grid-view-row-no-bg">Sl.No.</th>    
                        <th class="tbl-th-grid-view-row-no-bg">Name(Emolument Or Deduction)</th>    
                        <th class="tbl-th-grid-view-row-no-bg">Type</th>
                        <th class="tbl-th-grid-view-row-no-bg">Description</th>
                        <th class="tbl-th-grid-view-row-no-bg">Action</th>                                              
                    </tr>
                </thead>

                <tbody>                           
                {%for r in result|default('')%} 
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{ loop.index }}</td>  
                            <td class="tbl-grid-view-row-no-bg" align="center">{{ r.fieldAttributeName|default('') }}</td>               
                            <td class="tbl-grid-view-row-no-bg" align="center">{{ r.attributeType|default('') }}</td>                             
                            <td class="tbl-grid-view-row-no-bg" style="width: 300px; text-align: justify;">{{ r.description|default('') }}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">
                                <select class="normal_select" id="emolumentDeductionAction{{r.pkid|default('')}}" name="txt_payrolMasterAction" >
                                   <option value="">Select</option>                                
                                   <option value="{{path('_retrive_emolument_deduction_master_record',{'pkid': r.pkid|default('')})}}&upd">Edit</option>
                                   <option value="{{path('_delete_emolument_deduction_master_record',{'pkid': r.pkid|default('')})}}&del">Delete</option> 
                                </select> 
                                <input class="button" name="commit" type="button" value="Go" onClick="emolumentDeductionAction(this,'{{r.pkid|default('')}}','#emolumentDeductionAction');" />  
                            </td>                                                 
                        </tr>                    
                {%endfor%}

                        </tbody>
                    </table>
                </td>
            </tr>                                 
    </table>
 </div> 