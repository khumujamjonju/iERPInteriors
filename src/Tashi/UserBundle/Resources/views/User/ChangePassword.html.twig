<div id="left-menu">
    <div id ="left-menu1sidebar">
        <h3 class="headertext">Change Password</h3>
        <div id="newmenu">            
        </div>       
    </div>         
</div>
<div id="right-content">   
    <div class='sub-menu'>
        <ul>
            <li class='active'><a href='#'><span>Change Password</span></a></li>            
        </ul>
    </div>
    <div class="newdashboard">
        <form id="FormChangePassword">
            <table id="tbDetail" width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" >                       
                <tr>
                    <td class="td-label-title"></td>
                </tr>
                <tr>
                    <td>
                        <form id="FormCreateAccount">
                            <input type="hidden" name="inputAccId" value="{{app.session.get('UPKID')}}">
                            <table width="100%" cellspacing="0">                    
                                <tr>
                                    <td class="td-gray-bg">Old Password<span class="mandatoryField">*</span></td>
                                    <td class="td-white-bg" width="200px" colspan="2">
                                        <input type="password" class="cmnWidth" id="txtopass" name="txtopass" value="" placeholder="Enter old password">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="td-gray-bg">New Password<span class="mandatoryField">*</span></td>
                                    <td class="td-white-bg" width="200px">
                                        <input type="password" class="cmnWidth" id="txtpass" name="txtpass" placeholder="Enter new password">
                                    </td>
                                    <td class="td-white-bg" rowspan="2" >
                                        <ul style="margin:0; list-style: none;">
                                            <li style="font-size: 11px; color:#ff0000;">Password must be atleast 8 letters long</li>
                                            <li style="font-size: 11px; color:#ff0000;">Password can contain 'A-Z','a-z','0-9','@,'_', '.'</li>                                
                                            <li style="font-size: 11px; color:#ff0000;">Password must contain atleast 1 Alphabet and 1 Number</li>
                                        </ul>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="td-gray-bg">Confirm Password<span class="mandatoryField">*</span></td>
                                    <td class="td-white-bg" colspan="2"><input type="password" class="cmnWidth" id="txtcpass" name="txtcpass" placeholder="Re-enter new password"></td>
                                </tr>                                       
                                <tr>
                                    <td class="td-gray-bg"></td>
                                    <td class="td-white-bg" colspan="2">
                                        <input type="button" class="button" value="Change Password" onclick="ChangePassword('{{path("_changepassword")}}');">
                                    </td>
                                </tr>
                            </table>  
                        </form>
                    </td>
                </tr>
            </table>
            <div id="divSuccess" style="margin:50px auto; width:70%; display:none; border:1px solid #1c8362; border-radius: 10px; padding:10px 30px;">
                <span style="margin:0; padding:0; 
                          padding-left:30px; color:#1c8362; 
                          font-size:1.7em;
                          height:35px;
                          background: #fff url('{{asset("bundles/common/images/checkmarktick.png")}}') no-repeat;
                          background-position-y:-1px;">Successfull</span>
                <p style="margin:10px 0; text-align:justify; color:#156a4f;">Congratulation!! Your password has been changed successfully.</p>
            </div>
        </form>
    </div>
</div>
