<html>
    <head>
        <title>Tashi Interiors|Forgot Password</title>
        <script type="text/javascript" src="{{ asset('bundles/common/js/jquery_v.1.11.1.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/common/js/jquery.serializeObject.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/common/js/validation.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/user/js/user.js') }}"></script>
        <style type="text/css">
            html{
                background: #ccc;
                font-family: Trebuchet Ms;
            }
            input[type=text]{
                width:100%;
                padding:10px;
                background-color: #F5F5F5;
                border:1px solid #ccc;
            }
            div.circle{
                margin:0 auto;
                width:170px;
                height:170px;
                /*background-color: #B8B8B8;*/
                border-radius: 100px;
            }
            input[type=button]{
                padding:10px;
                width:100%;
                background-color: #0f6e50;
                color:#fff;
                font-weight:bold;
                text-align:center;
                border:1px solid #ccc;  
                margin-top:25px;
            }
            input[type=button]:hover{
                background-color: #138762;
            }
            ul.tooltip{
                margin:0 auto;
                padding:0 10px;
                width:95%;
                border-radius: 10px;
                background: #fff;
                list-style:none;
                display:none;
                position: absolute;
                z-index:100;
            }
            ul.tooltip li{
                font-size: 12px; 
                color:#ff0000;
                margin:0;
                padding:3px 0;
            }
        </style>
        <script type="text/javascript">
            function mouseout(){
                document.getElementById('tooltip').style.display='none';
            }
            function mouseover(){
                document.getElementById('tooltip').style.display='block';
            }
        </script>
    </head>
    <body>
        <form id="FormForgotPassword">
            <div id="divDetail">        
                <p id="err_p" style="margin:0; margin-top: 110px; width:100%; color:#ff0000; text-align:center; font-size: 12px; position:absolute;"></p>
                <br/><br/>
                <div style="width:350px; margin:auto; position:relative;">    
                    <h2 style="margin:0; color:#0f6e50; padding:10px 0; text-align:center;">Forgot Password</h2>
                    <p style="margin:0; color:#6c6e6d; text-align:center; font-size: 12px;">Send link to your email to reset your password.</p>        

                    <div class="circle">
                        <img alt="photo" src="
                             {%set path=account.userFk.personFk.pictureFk.path|default('')%}
                            {%if path!=''%}                
                                {{asset(path)}}
                            {%else%}
                                {{asset("bundles/common/images/unk.jpg")}}
                            {%endif%}
                             " style="margin: 35px; width:110px; height:110px; border-radius:70px;">               
                    </div>
                    <input type="text" id="txtuname" name="txtuname" placeholder="Enter User Name">  
                    <p style="text-align:center;">OR</p>
                        
                    <input type="text" id="txtemail" name="txtemail" placeholder="Enter Your Registered Email ID">
                    <input id="btnSend" type="button" value ="Send Password Reset Link" onclick="ForgotPassword('{{path("_sendlink")}}');">                   
                </div>
            </div>
            <div id="divSuccess" style="margin:150px 200px; position:relative; display:none;">
                <p style="margin:0; padding:0; 
                          padding-left:30px; color:#1c8362; 
                          position:absolute; font-size:1.7em;
                          background: #ccc url('{{asset("bundles/common/images/checkmarktick.png")}}') no-repeat;
                          background-position-y:6px;">Successfull</p>
                <br/>
                <p style="margin:30px 0; text-align:justify; color:#156a4f;">An email containing password reset link has been sent to your email.</p>
            </div>
                        
        </form>
    </body>
</html>
    
