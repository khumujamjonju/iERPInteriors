<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tbl-border" >           
    <tr>
        <td class="td-label-title">Religion List:</td>
    </tr>
    <tr>
        <td>
            <table width="100%" align="center" border="0" cellpadding="0" id="example" cellspacing="0"  class="display"  >  
                <thead>
                    <tr> 
                        <th class="tbl-th-grid-view-row-no-bg">Name</th>
                        <th class="tbl-th-grid-view-row-no-bg">Action</th>                                               
                    </tr>
                </thead>
                <tbody>
                             {% for jt in allRecord.result%}
                        <tr>
                            <td class="tbl-grid-view-row-no-bg" align="center">{{jt.religionName | default('')}}</td>
                            <td class="tbl-grid-view-row-no-bg" align="center">
                                <a href="javascript:void();" onclick="retrieveEmpReligion('{{ path('_retrieve_emp_religion',{ 'religionId': jt.pkid | default('')})}}');">Edit</a> |
                                <a href="javascript:void();"  style="color:#ff0000;" onclick="deleteEmpReligionModule('{{ path('_delete_emp_religion',{ 'religionId': jt.pkid | default('')})}}','Religion');">Delete</a>
                            </td>                                                 
                        </tr>
                                  {%endfor%}
                    </tbody>
                </table>
            </td>
        </tr>                                 
    </table>