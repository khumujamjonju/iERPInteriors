<td class="td-gray-bg cmnWidth">Select Source ID List:<span class="necessary-field">*</span></td>
<td class="td-white-bg">
    <select name="selectlist" id="ddlb_selectlist" class="cmnWidth" onchange="DisplayBankCurrentBalance('{{path('_showcurrentbalance')}}');">
        <option value="">--Select--</option>
                   {%for type in sty %}
        <option value="{{type.bankFk.bankPk| default('')}}">{{type.bankFk.bankName| default('')}} ({{type.bankFk.accountNumber}})</option>
                   {%endfor%}

    </select>
</td>
<td class="td-gray-bg cmnWidth">Payment Mode<span class="necessary-field">*</span> :
    <select name="selectmode" id="ddlb_selectmode" onchange="selectCashPaymentMode(this.value);">
        <option value="">--Select--</option>
                   {%for p in pay %}
        <option value="{{p.pkid | default('')}}">{{p.paymentModeName | default('')}}</option>
                   {%endfor%}
    </select>
    {%for p in pay%} 
    <input type="hidden" id="keyToDetectCash{{ p.pkid|default('') }}" value="{{ p.ispaymentNoRequired|default('') }}"/> 
    {%endfor%}

</td>
<td class="td-white-bg">
    Payment No: <input type="text" class="cmnWidth" disabled id="payment_number"  name="txt_payment_number" onKeypress="return validationDigit('#payment_number');"/>
</td>


